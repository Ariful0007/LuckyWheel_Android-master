<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/space_5dp"
    android:layout_marginRight="@dimen/space_5dp"
    android:background="@drawable/borderfile"
    app:cardBackgroundColor="#cfd8dc"
    app:cardCornerRadius="@dimen/space_5dp"
    android:layout_marginLeft="@dimen/space_5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@mipmap/ic_bell"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="@dimen/space_5dp"
        ></de.hdodenhof.circleimageview.CircleImageView>
    <LinearLayout
        android:layout_marginLeft="75dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <TextView

        android:textColor="#000"
        android:id="@+id/add_notes_title"
        android:layout_below="@id/profile_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@android:color/transparent"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Name"
        android:inputType="textMultiLine"
        android:paddingTop="3dp"
        android:textAlignment="viewStart"
        android:textSize="20sp"
        android:textStyle="bold"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_toolbar" />
    <ScrollView
        android:id="@+id/scroll"



        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_notes_title"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <androidx.core.widget.NestedScrollView
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="start"
                android:hint="Description"
                android:text="hfdghfdjgh"
                android:paddingBottom="40dp"
                android:id="@+id/blog_detail_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:fontFamily="@font/circular_std_book"

                android:textAlignment="textStart"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />
        </androidx.core.widget.NestedScrollView>

    </RelativeLayout>
    </ScrollView>
    </LinearLayout>
</RelativeLayout>