<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout

            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:id="@+id/setup_image"
                android:layout_marginTop="20dp"
                android:src="@drawable/imagee"
                app:civ_border_color="#000"
                app:civ_border_width="2dp"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_marginTop="-50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""

                android:id="@+id/changeProfilePhoto"
                android:layout_below="@+id/setup_image"
                android:layout_centerHorizontal="false"
                android:layout_alignParentRight="true"
                android:layout_marginRight="100dp"
                android:drawableRight="@drawable/ic_baseline_photo_camera_24"
                android:textSize="16sp"/>

           <LinearLayout
               android:layout_marginTop="200dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               >
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   >
                   <LinearLayout
                       android:layout_marginTop="20dp"

                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal">
                       <LinearLayout

                           android:layout_width="0dp"

                           android:layout_height="50dp"
                           android:layout_weight="1"
                           android:orientation="vertical"

                           >
                           <TextView
                               android:layout_marginRight="20dp"
                               android:layout_width="match_parent"
                               android:layout_height="30dp"


                               android:layout_marginTop="@dimen/space_15dp"
                               android:gravity="center_vertical"
                               android:textColor="@color/black"
                               android:fontFamily="@font/open_sans_semibold"
                               android:text="Name : "
                               android:textAlignment="viewStart"
                               android:layout_marginLeft="20dp"

                               android:textSize="15dp" />

                       </LinearLayout>
                       <LinearLayout

                           android:layout_width="0dp"

                           android:layout_height="50dp"
                           android:layout_weight="1"
                           android:orientation="vertical"

                           >
                           <TextView
                               android:layout_marginRight="20dp"
                               android:layout_width="match_parent"
                               android:layout_height="30dp"
                               android:id="@+id/name"
                               android:drawableRight="@drawable/ic_baseline_edit_24"


                               android:layout_marginTop="@dimen/space_15dp"
                               android:gravity="center_vertical"
                               android:textColor="@color/black"
                               android:fontFamily="@font/open_sans_semibold"
                               android:text="ABCD"
                               android:textAlignment="viewStart"
                               android:layout_marginLeft="0dp"

                               android:textSize="15dp" />

                       </LinearLayout>
                   </LinearLayout>
               </LinearLayout>
               //userid
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   >
                   <LinearLayout


                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal">
                       <LinearLayout

                           android:layout_width="0dp"

                           android:layout_height="50dp"
                           android:layout_weight="1"
                           android:orientation="vertical"

                           >
                           <TextView
                               android:layout_marginRight="20dp"
                               android:layout_width="match_parent"
                               android:layout_height="30dp"


                               android:layout_marginTop="@dimen/space_15dp"
                               android:gravity="center_vertical"
                               android:textColor="@color/black"
                               android:fontFamily="@font/open_sans_semibold"
                               android:text="UserID  : "
                               android:textAlignment="viewStart"
                               android:layout_marginLeft="20dp"

                               android:textSize="15dp" />

                       </LinearLayout>
                       <LinearLayout

                           android:layout_width="0dp"

                           android:layout_height="50dp"
                           android:layout_weight="1"
                           android:orientation="vertical"

                           >
                           <TextView
                               android:layout_marginRight="20dp"
                               android:layout_width="match_parent"
                               android:layout_height="30dp"



                               android:layout_marginTop="@dimen/space_15dp"
                               android:gravity="center_vertical"
                               android:textColor="@color/black"
                               android:fontFamily="@font/open_sans_semibold"
                               android:text="123456987"
                               android:id="@+id/id"
                               android:textAlignment="viewStart"
                               android:layout_marginLeft="0dp"

                               android:textSize="15dp" />

                       </LinearLayout>
                   </LinearLayout>
               </LinearLayout>
               // invalid click
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   >
                   <LinearLayout


                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal">
                       <LinearLayout

                           android:layout_width="0dp"

                           android:layout_height="50dp"
                           android:layout_weight="1"
                           android:orientation="vertical"

                           >
                           <TextView
                               android:layout_marginRight="20dp"
                               android:layout_width="match_parent"
                               android:layout_height="30dp"


                               android:layout_marginTop="@dimen/space_15dp"
                               android:gravity="center_vertical"
                               android:textColor="@color/black"
                               android:fontFamily="@font/open_sans_semibold"
                               android:text="Invalid Click : "
                               android:textAlignment="viewStart"
                               android:layout_marginLeft="20dp"

                               android:textSize="15dp" />

                       </LinearLayout>
                       <LinearLayout

                           android:layout_width="0dp"

                           android:layout_height="50dp"
                           android:layout_weight="1"
                           android:orientation="vertical"

                           >
                           <TextView
                               android:layout_marginRight="20dp"
                               android:layout_width="match_parent"
                               android:layout_height="30dp"


                               android:layout_marginTop="@dimen/space_15dp"
                               android:gravity="center_vertical"
                               android:textColor="@color/black"
                               android:fontFamily="@font/open_sans_semibold"
                               android:text="0"
                               android:id="@+id/invalidtask"
                               android:textAlignment="viewStart"
                               android:layout_marginLeft="0dp"

                               android:textSize="15dp" />

                       </LinearLayout>
                   </LinearLayout>
               </LinearLayout>
               //refercode
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   >
                   <LinearLayout


                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal">
                       <LinearLayout

                           android:layout_width="0dp"

                           android:layout_height="50dp"
                           android:layout_weight="1"
                           android:orientation="vertical"

                           >
                           <TextView
                               android:layout_marginRight="20dp"
                               android:layout_width="match_parent"
                               android:layout_height="30dp"


                               android:layout_marginTop="@dimen/space_15dp"
                               android:gravity="center_vertical"
                               android:textColor="@color/black"
                               android:fontFamily="@font/open_sans_semibold"
                               android:text="Refer Code : "
                               android:textAlignment="viewStart"
                               android:layout_marginLeft="20dp"

                               android:textSize="15dp" />

                       </LinearLayout>
                       <LinearLayout

                           android:layout_width="0dp"

                           android:layout_height="50dp"
                           android:layout_weight="1"
                           android:orientation="vertical"

                           >

                           <TextView
                               android:id="@+id/refercode"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:layout_marginLeft="0dp"

                               android:layout_marginTop="@dimen/space_15dp"
                               android:layout_marginRight="20dp"
                               android:drawableRight="@drawable/ic_baseline_file_copy_24"
                               android:fontFamily="@font/open_sans_semibold"
                               android:gravity="center_vertical"
                               android:text="12345"
                               android:textAlignment="viewStart"
                               android:textColor="@color/black"

                               android:textSize="15dp" />

                       </LinearLayout>
                   </LinearLayout>
               </LinearLayout>
               //today task
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   >
                   <LinearLayout


                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal">
                       <LinearLayout

                           android:layout_width="0dp"

                           android:layout_height="50dp"
                           android:layout_weight="1"
                           android:orientation="vertical"

                           >
                           <TextView
                               android:layout_marginRight="20dp"
                               android:layout_width="match_parent"
                               android:layout_height="30dp"


                               android:layout_marginTop="@dimen/space_15dp"
                               android:gravity="center_vertical"
                               android:textColor="@color/black"
                               android:fontFamily="@font/open_sans_semibold"
                               android:text="Today Task : "
                               android:textAlignment="viewStart"
                               android:layout_marginLeft="20dp"

                               android:textSize="15dp" />

                       </LinearLayout>
                       <LinearLayout

                           android:layout_width="0dp"

                           android:layout_height="50dp"
                           android:layout_weight="1"
                           android:orientation="vertical"

                           >
                           <TextView
                               android:layout_marginRight="20dp"
                               android:layout_width="match_parent"
                               android:layout_height="30dp"

android:id="@+id/todaytask"

                               android:layout_marginTop="@dimen/space_15dp"
                               android:gravity="center_vertical"
                               android:textColor="@color/black"
                               android:fontFamily="@font/open_sans_semibold"
                               android:text="0"
                               android:textAlignment="viewStart"
                               android:layout_marginLeft="0dp"

                               android:textSize="15dp" />

                       </LinearLayout>
                   </LinearLayout>
               </LinearLayout>
               //date
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   >
                   <LinearLayout


                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal">
                       <LinearLayout

                           android:layout_width="0dp"

                           android:layout_height="50dp"
                           android:layout_weight="1"
                           android:orientation="vertical"

                           >
                           <TextView
                               android:layout_marginRight="20dp"
                               android:layout_width="match_parent"
                               android:layout_height="30dp"


                               android:layout_marginTop="@dimen/space_15dp"
                               android:gravity="center_vertical"
                               android:textColor="@color/black"
                               android:fontFamily="@font/open_sans_semibold"
                               android:text="Joining Date : "
                               android:textAlignment="viewStart"
                               android:layout_marginLeft="20dp"

                               android:textSize="15dp" />

                       </LinearLayout>
                       <LinearLayout

                           android:layout_width="0dp"

                           android:layout_height="50dp"
                           android:layout_weight="1"
                           android:orientation="vertical"

                           >

                           <TextView
                               android:id="@+id/datee"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"

                               android:layout_marginLeft="0dp"
                               android:layout_marginTop="@dimen/space_15dp"
                               android:layout_marginRight="20dp"
                               android:fontFamily="@font/open_sans_semibold"
                               android:gravity="center_vertical"
                               android:text="12/1/2021"
                               android:textAlignment="viewStart"
                               android:textColor="@color/black"

                               android:textSize="12dp" />

                       </LinearLayout>
                   </LinearLayout>
               </LinearLayout>
               //refer
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   >
                   <LinearLayout


                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal">
                       <LinearLayout

                           android:layout_width="0dp"

                           android:layout_height="50dp"
                           android:layout_weight="1"
                           android:orientation="vertical"

                           >
                           <TextView
                               android:layout_marginRight="20dp"
                               android:layout_width="match_parent"
                               android:layout_height="30dp"


                               android:layout_marginTop="@dimen/space_15dp"
                               android:gravity="center_vertical"
                               android:textColor="@color/black"
                               android:fontFamily="@font/open_sans_semibold"
                               android:text="Total Refer : "
                               android:textAlignment="viewStart"
                               android:layout_marginLeft="20dp"

                               android:textSize="15dp" />

                       </LinearLayout>
                       <LinearLayout

                           android:layout_width="0dp"

                           android:layout_height="50dp"
                           android:layout_weight="1"
                           android:orientation="vertical"

                           >
                           <TextView
                               android:layout_marginRight="20dp"
                               android:layout_width="match_parent"
                               android:layout_height="30dp"



                               android:layout_marginTop="@dimen/space_15dp"
                               android:gravity="center_vertical"
                               android:textColor="@color/black"
                               android:fontFamily="@font/open_sans_semibold"
                               android:text="0"
                               android:id="@+id/refer"
                               android:textAlignment="viewStart"
                               android:layout_marginLeft="0dp"

                               android:textSize="15dp" />

                       </LinearLayout>
                   </LinearLayout>
               </LinearLayout>

           </LinearLayout>

            <!-- username section -->
        </RelativeLayout>

    </ScrollView>
</merge>